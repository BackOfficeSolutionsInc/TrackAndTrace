@model RadialReview.Models.Customize.CustomText
		   

<div class="row smallBreak2">
	<div class="col-xs-3"><label>Property:</label></div>
	<div class="col-xs-9">@Html.DropDownListFor(x => x.PropertyName, Model._PossibleItems, new { @class = "fullWidth form-control" })</div>
</div>

<div class="smallBreak2"></div>
<div class="row">
	<div class="col-xs-3"><label>New Value:</label></div>
	<div class="col-xs-9">@Html.TextBoxFor(x => x.NewText, new { @class = "fullWidth" })</div>
</div>

@Html.HiddenFor(x => x.Id)
@Html.HiddenFor(x => x.OrgId)
@Html.HiddenFor(x => x.CreateTime)
@Html.HiddenFor(x => x.DeleteTime)