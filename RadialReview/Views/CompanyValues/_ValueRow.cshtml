@model RadialReview.Models.Askables.CompanyValueModel
<div class="roleRow">
	@using (Html.BeginCollectionItem("companyValues"))
	{
		<div class="roww">
				
			<div style="width:calc( 100% - 25px );display:inline-block">
				@Html.HiddenFor(x => x.Id)
				@Html.TextBoxFor(x => x.CompanyValue, new { @class = "form-control roleItem", placeholder = "Enter your company value (character limit: 64)...", maxlength = "64" })
				@Html.HiddenFor(x => x.CreateTime)
				@Html.HiddenFor(x => x.DeleteTime)
			</div>
			<span style="padding-left:8px;" class="glyphicon glyphicon-trash deleteRow clickable" title="Delete"></span>
			<div  style="width:calc( 100% - 25px );padding-top: 2px;">
				@Html.TextAreaFor(x => x.CompanyValueDetails, new { @class = "form-control roleItem verticalOnly", placeholder = "Enter details...", style = "height:75px" })
			</div>
			<hr style="margin-bottom: 7px;margin-top: 7px;margin-left: -30px;margin-right: -30px;"/>
		</div>
	}
	<div class="smallBreak"></div>
	<div class="smallBreak"></div>
</div>