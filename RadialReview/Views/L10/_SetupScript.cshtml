@model RadialReview.Models.L10.VM.L10MeetingVM

@using (Html.BeginScripts())
{
	<script src="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
	<script src="//code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
	<script>
		// _SetupScript.cshtml

		$.fn.editable.defaults.mode = 'popup';

		@if (Model.MeetingStart != null){
			@:var startTime = new Date(@(Model.MeetingStart.Value.ToJavascriptMilliseconds()));
		}
		
		var recurrenceId = @Model.Recurrence.Id;
		var meetingId = -1;

		var UserName = "@Html.UserOrganization().GetName()";

		@if (Model.Meeting != null){
			@:var isLeader = @(Model.Meeting.MeetingLeaderId == ViewBag.UserId ? "true" : "false");
			@:var currentPage = "@Model.Meeting._MeetingLeaderCurrentPage";
			@:var currentPageStartTime = @Model.Meeting._MeetingLeaderCurrentPageStartTime.NotNull(x => x.Value.ToJavascriptMilliseconds());
			@:var currentPageBaseMinutes = @(Model.Meeting._MeetingLeaderCurrentPageBaseMinutes ?? 0);
			@:meetingStart = true;
			
			@:var meetingId = @Model.Meeting.Id;
			@:console.log("Setting meetingid="+meetingId);
		}
		else{

			@:var meetingStart = false;
			@:var isLeader = false;
		}


	</script>
}
@using (Html.BeginStyles())
{
	<link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet" />
	<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

}

