                    } catch (e) {
                        oldError.apply(console, e);
                    }
                    oldError.apply(console, arguments);
                };
            </script>
        }*@
    @RenderSection("bottomSection", required: false)

    <script src="https://cdn.polyfill.io/v2/polyfill.js?features=CustomEvent"></script>

    @Scripts.Render("~/bundles/jquery")
    @*<script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>*@
    <script src="https://ajax.aspnetcdn.com/ajax/signalr/jquery.signalr-2.2.0.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("modals", required: false)
    @Scripts.Render("~/bundles/main")
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/Main/realtime.js"></script>

    @Html.PageScripts()
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
        ga('create', 'UA-68333423-1',{'userId':@(ViewBag.UserId??-1L)});
        ga('set', 'dimension1', @(ViewBag.UserId??-1L));
        ga('send', 'pageview');
    </script>

    @if (!(ViewBag.FullWidth ?? false))
    {
        @*<script type="text/javascript" src="http://assets.freshdesk.com/widget/freshwidget.js"></script>
            <script type="text/javascript">
                $(function () {
                    FreshWidget.init("", { "queryString": "&widgetType=popup", "widgetType": "popup", "buttonType": "text", "buttonText": "Support", "buttonColor": "white", "buttonBg": "#767F99", "alignment": "4", "offset": "235px", "formHeight": "500px", "url": "http://radialreview.freshdesk.com" });
                });
            </script>*@
    }


</body>

</html>

@{
    RadialReview.Utilities.Productivity.ChromeExtensionComms.SendCommand("pageLoad");
}