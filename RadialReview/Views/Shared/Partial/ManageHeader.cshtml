<div class="nav-arrows flat pull-left noselect">
    <a href="/Manage/Members"   class="@(ViewBag.Page == "Members"   ? "active" : "")">Members</a>
    <a href="/Manage/Positions" class="@(ViewBag.Page == "Positions" ? "active" : "")">Positions</a>
    <a href="/Manage/Teams"     class="@(ViewBag.Page == "Teams"     ? "active" : "")">Teams</a>
    <a href="/Manage/Reviews"   class="@(ViewBag.Page == "Reviews"   ? "active" : "")">Reviews</a>
</div>
