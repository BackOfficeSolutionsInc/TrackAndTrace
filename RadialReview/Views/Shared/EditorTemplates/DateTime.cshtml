@model DateTime

<div class="input-append date form-group" data-date="@Model.ToString("MM-dd-yyyy")" data-date-format="mm-dd-yyyy">
	<label class="col-xs-4 control-label">@RadialReview.Properties.DisplayNameStrings.due:</label>
	<div class="col-xs-6">
		@Html.TextBoxFor(x => Model, new { @class = "form-control col-xs-2", id = "Date" })
		<!--input name="date" id="date" class="form-control col-xs-2" size="30" type="text" value=""-->
	</div>
	<span class="add-on"><i class="icon-th"></i></span>
</div>
