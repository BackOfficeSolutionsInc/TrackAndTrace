@model RadialReview.Models.Enums.FiveState

<div class="fivestate editor">
	<div class="fivestate-contents">
		<div class="fivestate-slider">
			<input class="slider"
				   @*name="@ViewData["name"]"*@
			       type="hidden"
				   value="@((int)Model)"
				   data-slider="true"
				   data-slider-range="0,4"
				   data-slider-step="1"
				   data-slider-highlight="true"
				   data-slider-snap="true" />
		</div>
		<input name="@ViewData["name"]" class="data changeable" type="hidden" value="@Model" />
		<span class="fivestate-val fivestate-always">Always</span>
		<span class="fivestate-val fivestate-mostly">Mostly</span>
		<span class="fivestate-val fivestate-rarely">Rarely</span>
		<span class="fivestate-val fivestate-never">Never</span>
		<span class="fivestate-val fivestate-indeterminate">n/a</span>
		<div class="fill"></div>
	</div>
</div>