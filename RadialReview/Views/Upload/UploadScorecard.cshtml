@model RadialReview.Controllers.UploadController.UploadScorecardVM
@{
    ViewBag.Title = "UploadScorecard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.FullWidth = true;
    
}

@using (Html.BeginScripts())
{
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="~/Scripts/Upload/UploadScorecard.js"></script>
}
@using (Html.BeginStyles())
{

    <link href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" rel="stylesheet" type="text/css" />
  
    <style type="text/css">
        .ui-selecting {
            background: rgba(128, 128, 128, 0.50);
        }

        .ui-selected {
            background: rgba(108, 255, 102, 0.50);
        }
        .table-condensed td{
            padding:0 !important;
            border: 1px solid gray !important;
        }

        .tdItem {
            white-space: nowrap;
            max-width: 80px;
            -ms-text-overflow: ellipsis;
            -o-text-overflow: ellipsis;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .wasSelected{
            background:rgba(6, 144, 247, 0.6);
        }

        #table{
            font-size:8px;
        }

        .resultTable td{
            white-space: nowrap;
            max-width: 80px;
            -ms-text-overflow: ellipsis;
            -o-text-overflow: ellipsis;
            text-overflow: ellipsis;
            overflow: hidden;
        }
    </style>
}

<h2>Upload Scorecard</h2>


@using (Ajax.BeginForm("uploadscorecard", "upload", new { }, new AjaxOptions()
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "window",

}, new { enctype = "multipart/form-data" }))
{

    <form action="/Upload/UploadScorecard" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-sm-2">
                <label for="file">Filename:</label>
            </div>
            <div class="col-sm-8">
                <input type="file" name="File" id="File" />
            </div>
            <div class="col-sm-2">
                <input class="btn btn-primary" type="submit" />
            </div>
        </div>
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.RecurrenceId)
        @Html.HiddenFor(x => x.Guid)
    </form>
}

