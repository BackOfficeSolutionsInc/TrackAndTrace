@{
    var stepper = (ViewBag.Stepper as bool?) ?? false;
    var fileUpload = (ViewBag.FileUpload as bool?) ?? false;
}



@using (Html.BeginStyles()) {
    <!--Begin Angular Styles-->
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.0-rc2/angular-material.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-material-data-table/0.10.8/md-data-table.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    if (stepper) {
        @*<link href="~/Content/MaterialDesign/Libraries/md-stepper.css" rel="stylesheet" />*@
        @Styles.Render("~/Content/MdStepper")
    }
    if (fileUpload) {
        @*<link href="~/Content/MaterialDesign/Libraries/lf-ng-md-file-input.css" rel="stylesheet" />*@
        @Styles.Render("~/Content/MdFile")
    }
    @Styles.Render("~/styles/Angular")
    <!--End Angular Styles-->
}@using (Html.BeginScripts()) {
    <!--Begin Angular Scripts-->
    if (RadialReview.Utilities.Config.IsLocal()) {
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.js"></script>
    } else {
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.min.js"></script>
    }
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-messages.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.0-rc2/angular-material.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-material-data-table/0.10.8/md-data-table.min.js"></script>
     if (stepper) {
        @*<script src="~/Scripts/Angular/MaterialDesign/md-stepper.js"></script>*@
        @Scripts.Render("~/bundles/MdStepper")
     }
     if (fileUpload) {
        @Scripts.Render("~/bundles/MdFile")
        @*<script src="~/Scripts/Angular/MaterialDesign/lf-ng-md-file-input.min.js"></script>*@
     }
    @Scripts.Render("~/bundles/Angular")
    <!--End Angular Scripts-->
}