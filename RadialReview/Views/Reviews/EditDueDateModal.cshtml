		var checkout = $('#DueDate').datepickerX({
			format: '@Html.Organization().Settings.GetDateFormat().ToLower()',
			onRender: function(date) {
				return date.valueOf() <= now.valueOf() ? 'disabled' : '';
			}
		});
	}
</script>

