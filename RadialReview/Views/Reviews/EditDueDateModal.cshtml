@model RadialReview.Controllers.ReviewsController.DueDateVM

<div class="row smallBreak2">
	<div class="col-md-6">
		<label class="control-label">Reviews are due:</label>
	</div>
	<div class="col-md-4">
		<div class="date" data-date="@(Model.DueDate.ToString("MM-dd-yyyy"))" data-date-format="mm-dd-yyyy">
			@Html.TextBoxFor(x => x.DueDate, null, new { @class = "form-control datePicker", id = "DueDate" })
			<!--input name="date" id="date" class="form-control col-xs-2" size="30" type="text" value=""-->
			<span class="add-on"><i class="icon-th"></i></span>
		</div>
	</div>
</div>

@Html.HiddenFor(x => x.RReviewId)

<script>

	function startDueDateEditModal() {

		var nowTemp = new Date();
		var now = new Date(nowTemp.getFullYear(), nowTemp.getMonth(), nowTemp.getDate(), 0, 0, 0, 0);

		var checkout = $('#DueDate').datepicker({
			format: 'mm-dd-yyyy',
			onRender: function(date) {
				return date.valueOf() <= now.valueOf() ? 'disabled' : '';
			}
		});
	}
</script>

<img src="~/Content/img/blank.gif" onload="startDueDateEditModal()" />