    var sec = 30;
    var dec = sec;
    setInterval(function () { window.location.reload(); }, sec*1000);
    setInterval(function () { dec -= 1; $(".seconds").html(dec+"s"); }, 1000);
</script>*@

<h2>Current Time : @DateTime.UtcNow.ToLongTimeString() <small class="seconds"></small></h2>



@foreach (var userGroupLines in Model)
{
    <div class="userList">
        <h4>@userGroupLines.Actions.First().Parent.NotNull(x=>x.csUsername) &nbsp;</h4>
        <ol class="">
            @foreach (var actions in userGroupLines.Actions)
            {
                <li>@actions.Parent.NotNull(x => x.csUriStem)  <span class="pull-right @(actions.Parent.NotNull(x => (DateTime.UtcNow-x.Date).TotalMinutes<6)?"recent":"")">@actions.Parent.NotNull(x => x.Date.ToLongTimeString())</span></li>
                <ul>
                    @foreach (var line in actions.Lines)
                    {
                        <li>@line.NotNull(x => x.csUriStem)  <span class="pull-right @(line.NotNull(x => (DateTime.UtcNow-x.Date).TotalMinutes<6)?"recent":"")">@line.NotNull(x => x.Date.ToLongTimeString())</span></li>
                    }
                </ul>
            }
        </ol> 
    </div>
}

