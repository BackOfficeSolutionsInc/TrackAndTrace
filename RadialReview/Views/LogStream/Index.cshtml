@model List<RadialReview.Controllers.LogStreamController.LogLineUserGroups>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    
}


<style>
    .body-content {
        width: 100% !important;
    }

    .userList {
        display: inline-block;
        width: 400px;
        height: 400px;
        float: left;
        font-size: 10px;
        position: relative;
        border: 1px dotted gray;
    }

        .userList:hover {
            border: 1px solid gray;
        }

        .userList ol {
            overflow: auto;
            height: calc(100% - 33px);
        }

        .userList h4 {
            font-weight: bold;
            background-color: white;
            font-size: 12px;
            padding-left: 10px;
            font-weight: bold;
            color: orange;
        }

    ul {
        color: gray;
        padding-left: 14px;
    }

    ol > li {
        font-weight: bold;
    }

    .recent {
        color: white;
        background-color: green;
    }
</style>
