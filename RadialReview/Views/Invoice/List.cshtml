@model IEnumerable<RadialReview.Models.InvoiceModel>

@{
	ViewBag.Title = "List";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Invoices</h2>

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.TransactionId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.InvoiceSentDate)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.InvoiceDueDate)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PaidTime)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ServiceEnd)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.AmountDue)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.TransactionId)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.InvoiceSentDate)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.InvoiceDueDate)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.PaidTime)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ServiceEnd)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.AmountDue)
			</td>
			<td>
				@Html.ActionLink("Details","Details",new {id=item.Id});
			</td>
		</tr>
	}

</table>
