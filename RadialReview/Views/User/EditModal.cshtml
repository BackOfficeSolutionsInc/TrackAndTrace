@model RadialReview.Models.ViewModels.EditUserOrganizationViewModel

@Html.HiddenFor(x => x.UserId)

@if(Model.CanSetManagingOrganization)
{ 
    <div class="row">
        <div class="col-xs-5"><label>Managing Organization:</label></div>
        <div class="col-xs-7">@Html.CheckBoxFor(x => x.ManagingOrganization, new { @class = "checkbox" })</div>
    </div>
}

<div class="smallBreak"></div>
<div class="row">
    <div class="col-xs-5"><label>Is Manager:</label></div>
    <div class="col-xs-7">@Html.CheckBoxFor(x => x.IsManager, new { style = "padding-bottom: 7px;", @class = "checkbox" })</div>
</div>



<script>
    $(function () {
        $("#positionSelector").change(function () {
            $("#customPosition").val($("#positionSelector option:selected").text());
            setTimeout(function () { $("#customPosition")[0].select(); }, 10);
        })
    });
</script>
