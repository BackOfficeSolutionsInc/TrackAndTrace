@model RadialReview.Controllers.UserController.RemoveUserVM


@Html.HiddenFor(x => x.UserId)

<div class="smallBreak"></div>
<div class="row">
    <div class="col-xs-12">
        <p style="color: #BD3D3D; font-weight: bold;">
            Are you sure you want to remove @Model.UsersName from @Model.OrganizationName?
        </p>
    </div>
    @if (Model.SideEffects.Any())
    {
        <div class="table-responsive" style="max-height:150px;overflow-y:auto">
            <table class="table table-striped table-condensed ">
                <thead>
                    <tr>
                        <th class="danger">Warning:</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.SideEffects)
                    {
                        <tr class="danger">
                            <td>@x</td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
        <div class="col-xs-12">
            <p style="color: #BD3D3D; font-weight: bold;">
                Continue anyway?
            </p>
        </div>
    }
</div>

<script>
    $(function () {
        $("#positionSelector").change(function () {
            $("#customPosition").val($("#positionSelector option:selected").text());
            setTimeout(function () { $("#customPosition")[0].select(); }, 10);
        })
    });
</script>
