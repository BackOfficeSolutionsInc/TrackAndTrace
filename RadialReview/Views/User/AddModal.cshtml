<div class="row">
	<div class="col-xs-3"><label>Send Email Invite:</label></div>
	<div class="col-xs-9">@Html.CheckBoxFor(x => x.SendEmail, new { style = "padding-bottom: 7px;", @class = "checkbox" })</div>
</div>
