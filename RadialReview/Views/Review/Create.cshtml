@model RadialReview.Models.ViewModels.IssueReviewViewModel


<p>@String.Format(RadialReview.Properties.MessageStrings.ThisWillSendAnEmailToSubordinates,Model.ForUsers.Count)</p>
<div class="row">
    <div class="col-xs-2 bold">@RadialReview.Properties.DisplayNameStrings.name:</div><input name="name" id="name" class="col-sm-3 col-xs-2" size="30" type="text" value="">
</div>
<div class="smallBreak"></div>
<div class="row">
    <div class="input-append date" data-date="@Model.Today.ToString("dd-MM-yyyy")" data-date-format="dd-mm-yyyy">
        <div class="col-xs-2 bold">@RadialReview.Properties.DisplayNameStrings.due:</div><input name="date" id="date" class="col-sm-3 col-xs-2" size="30" type="text" value="">
        <span class="add-on"><i class="icon-th"></i></span>
    </div>
</div>

<script type="text/javascript">


    function completeIssue() {
        var nowTemp = new Date();
        var now = new Date(nowTemp.getFullYear(), nowTemp.getMonth(), nowTemp.getDate(), 0, 0, 0, 0);

        $('#date').datepicker({
            format: 'mm-dd-yyyy',
            onRender: function(date) {
                return date.valueOf() < now.valueOf() ? 'disabled' : '';
            }
        });
    }

    function check() {
        if ($("#date").val())
            return true;
        return "@RadialReview.Properties.ErrorMessageStrings.supplyAllFields";
    }
</script>