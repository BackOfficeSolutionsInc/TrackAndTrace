@model RadialReview.Models.ViewModels.IssueReviewViewModel

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-xs-3 control-label">Review Name:</label>
        <div class="col-xs-6">
            @Html.TextBoxFor(x => x.Name, new { @class="form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-3 control-label">For Team:</label>
        <div class="col-xs-6">
            @Html.DropDownListFor(x => x.ForTeamId, Model.PotentialTeams, new { @class = "form-control" })
        </div>
    </div>
    <div class="input-append date form-group" data-date="@Model.Today.ToString("dd-MM-yyyy")" data-date-format="dd-mm-yyyy">
        <label class="col-xs-3 control-label">@RadialReview.Properties.DisplayNameStrings.due:</label>
        <div class="col-xs-6">
            @Html.TextBoxFor(x => x.Date, new { @class = "form-control col-xs-2", id="Date" })
            <!--input name="date" id="date" class="form-control col-xs-2" size="30" type="text" value=""-->
        </div>
        <span class="add-on"><i class="icon-th"></i></span>
    </div>
</div>
<script type="text/javascript">


    function completeIssue() {
        var nowTemp = new Date();
        var now = new Date(nowTemp.getFullYear(), nowTemp.getMonth(), nowTemp.getDate(), 0, 0, 0, 0);

        $('#Date').datepicker({
            format: 'mm-dd-yyyy',
            onRender: function (date) {
                return date.valueOf() < now.valueOf() ? 'disabled' : '';
            }
        });
    }

    function check() {
        if ($("#Date").val() && $("#Name").val())
            return true;
        return "@RadialReview.Properties.ErrorMessageStrings.supplyAllFields";
    }
</script>
