@model Tuple<List<RadialReview.Models.CompanyValueAnswer>, bool>

@using RadialReview.Models.Enums

@if (Model.Item1.Any())
{
	<div class="subsection subsection-values">
		<table class="table-values">
			<thead>
				<tr>
					<th></th>
					<th></th>
					<th></th>

				</tr>
			</thead>
			<tbody>
				@{
	var questions = Model.Item1.OrderBy(x => x.Askable.GetQuestion()).ToList();
				}
				@for (var i = 0; i < questions.Count(); i++)
				{
					<tr>
						<td style="width:50%"><h4 class="question alignRight" style="padding-right:15px;">@questions[i].Askable.GetQuestion()</h4></td>
						<td>@Html.EditorFor(x => questions[i].Exhibits, new { name = "question_" + RadialReview.Models.Enums.QuestionType.CompanyValue + "_" + questions[i].Identifier })</td>
						@*<td><h4 class="question alignLeft noselect" style="padding-left:15px;color:transparent">@questions[i].Askable.GetQuestion()</h4></td>*@
						<td style="vertical-align:top;padding-left:5px;width:50%">
							<textarea name="question_@(QuestionType.CompanyValue)_@(questions[i].Identifier)_Reason" class="full-width changeable reason" placeholder="Add Reason"
									  >@questions[i].Reason</textarea>
						</td>
					</tr>

				}
			</tbody>
		</table>
		<div class="evaluation-heading" >Company Values</div>
	</div>
}

