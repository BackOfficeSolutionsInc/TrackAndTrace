			@foreach (var kv in Model.Categories)
            {
                    @:"@(kv.Key)": "@(kv.Value)",
						                                                                                                                                                                                        }
		};

		var updates = [];
		/*
        function legend(legendData, chart) {
            if (legendData.length > 0) {
                $("#legend_" + chart.id).html("<div class='container'><div class='title'>Legend:</div><div class='contents'></div></div>");

