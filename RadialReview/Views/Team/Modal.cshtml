@model RadialReview.Models.ViewModels.OrganizationTeamCreateViewModel


@Html.HiddenFor(x => x.TeamId)
@if (!Model.Standard)
{
	<i style="position: absolute;top: -19px;color: #AAA;">(Cannot edit auto-generated teams)</i>
}
<div class="row">
	<div class="col-sm-4">
		<label>Team Name:</label>
	</div>
	<div class="col-sm-8">
		@if (Model.Standard)
		{
			@Html.TextBoxFor(x => x.TeamName, new { @class = "form-control" })
		}
		else
		{
			@Model.TeamName
			@Html.HiddenFor(x => x.TeamName)
		}
	</div>
</div>
<div class="smallBreak"></div>
<div class="row">
	<div class="col-sm-4">
		<label>Managed By:</label>
	</div>
	<div class="col-sm-8">
		@if (Model.Standard)
		{
			@Html.DropDownListFor(x => x.ManagerId, Model.PotentialManagers, new { @class = "form-control" })
		}
		else
		{
			@Model.PotentialManagers.FirstOrDefault(x=>x.Value==""+Model.ManagerId).NotNull(x=>x.Text)
			@Html.HiddenFor(x => x.ManagerId)

		}
	</div>
</div>
<div class="smallBreak"></div>
<div class="row">
	<div class="col-sm-4">
		<label>Inter-Review:</label>
	</div>
	<div class="col-sm-8">
		@Html.CheckBoxFor(x => x.InterReview, new { @class = "checkbox" })
	</div>
</div>
