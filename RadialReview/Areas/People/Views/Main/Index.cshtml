
@{
    ViewBag.Title = "People Tools™";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.FullWidth = true;
}

@section top{
	<div class="jumbotron">
		<h1>
			People Tools<span style="font-size: 24px;top: -32px;position: relative;">™</span>
		</h1>
	</div>
}

<div class="people-tools">
	<div class="flex-container">
		<div class="flex-item">
			<a class="tool-button" href="/accountability/chart"><div class="tool"><div class="icon fontastic-icon-sitemap @*-flow-tree*@ tool-icon"></div><div class="tool-text-container"><div class="tool-text noselect">Accountability Chart</div></div></div></a>
		</div>
		@if (ViewBag.IsManager == true) {
			<div class="flex-item">
				<a class="tool-button" href="@Url.Action("Index", "PeopleAnalyzer")"><div class="tool"><div class="icon fontastic-icon-table tool-icon"></div><div class="tool-text-container"><div class="tool-text noselect">People Analyzer</div></div></div></a>
			</div>
		}
		<div class="flex-item">
			<a class="tool-button" href="@Url.Action("Index","QuarterlyConversation")"><div class="tool"><div class="icon fontastic-icon-comments tool-icon"></div><div class="tool-text-container"><div class="tool-text noselect">Quarterly Conversation</div></div></div></a>
		</div>


		@*<div class="flex-item">
				<div class="tool-button"><div class="tool"><div class="icon fontastic-icon-thumbnails-large tool-icon"></div><div class="tool-text-container"><div class="tool-text noselect">Delegate and Elevate</div></div></div></div>
			</div>

			<div class="flex-item">
				<div class="tool-button"><div class="tool"><div class="icon fontastic-icon-clipboard-notes tool-icon"></div><div class="tool-text-container"><div class="tool-text noselect">Annual Performance Review</div></div></div></div>
			</div>

			<div class="flex-item">
				<div class="tool-button"><div class="tool"><div class="icon fontastic-icon-target-two tool-icon"></div><div class="tool-text-container"><div class="tool-text noselect">One Thing</div></div></div></div>
			</div>*@

		@*<div class="flex-item">
				<div class="tool-button"><div class="tool"><div class="icon fontastic-icon-window-list tool-icon"></div><div class="tool-text-container"><div class="tool-text noselect">Manager Self Review</div></div></div></div>
			</div>

			<div class="flex-item">
				<div class="tool-button"><div class="tool"><div class="icon fontastic-icon-checklist tool-icon"></div><div class="tool-text-container"><div class="tool-text noselect">Leader Self Review</div></div></div></div>
			</div>*@
	</div>
</div>


<style>

        .people-tools .flex-container {
		text-align: center;
	}

		.people-tools .flex-container:after {
			content: '';
			display: inline-block;
			width: 100%;
		}

	.people-tools .flex-item {
		display: inline-block;
		width: 250px;
		height: 134px;
		margin: 10px;
	}

		.people-tools .flex-item .tool-button {
			display: table;
			width: 100%;
			height: 100%;
			cursor: pointer;
			background-color: #ef7622;
			position: relative;
		}

			.people-tools .flex-item .tool-button:active {
				top: 1px;
			}

			.people-tools .flex-item .tool-button .tool {
				display: table-cell;
				vertical-align: middle;
				position: absolute;
				width: 100%;
				height: 100%;
			}


				.people-tools .flex-item .tool-button .tool .tool-icon {
					font-size: 40px;
					color: white;
					margin-top: -30px;
					display: inline-block;
					top: 50%;
					position: absolute;
					left: 0;
					right: 0;
				}

	.tool-icon.icon:before {
		top: -2px;
	}

	.people-tools .flex-item .tool-button .tool-text-container {
		display: table-cell;
		vertical-align: middle;
	}

		.people-tools .flex-item .tool-button .tool-text-container .tool-text {
			font-size: 16px;
			color: white;
			padding: 0px 10px;
			position: absolute;
			bottom: 0px;
			width: 100%;
			height: 54px;
			display: inline-block;
		}

	.people-tools .fontastic-icon-checklist:before {
		font-size: 40px;
		left: 1px;
	}
</style>
